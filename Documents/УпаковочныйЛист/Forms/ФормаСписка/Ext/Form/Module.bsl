// #wortmann {
// Добавление новых полей на форму	
// Галфинд Плотников 2022/08/01
Процедура гф_ДобавитьНовыеРеквизиты()
	
	ТипПолеФормы = Тип("ПолеФормы");

	НовыйЭлемент				= ЭтотОбъект.Элементы.Вставить("гф_Комплектация", ТипПолеФормы, 
								ЭтотОбъект.Элементы.Список, ЭтотОбъект.Элементы.Вид);
	НовыйЭлемент.Вид			= ВидПоляФормы.ПолеНадписи;
	НовыйЭлемент.ПутьКДанным	= "Список.гф_Комплектация";

	НовыйЭлемент				= ЭтотОбъект.Элементы.Вставить("гф_Организация", ТипПолеФормы,
								ЭтотОбъект.Элементы.Список, ЭтотОбъект.Элементы.Вид);
	НовыйЭлемент.Вид			= ВидПоляФормы.ПолеНадписи;
	НовыйЭлемент.ПутьКДанным	= "Список.гф_Организация";

	НовыйЭлемент				= ЭтотОбъект.Элементы.Вставить("гф_Поставка", ТипПолеФормы,
								ЭтотОбъект.Элементы.Список, ЭтотОбъект.Элементы.Вид);
	НовыйЭлемент.Вид			= ВидПоляФормы.ПолеНадписи;
	НовыйЭлемент.ПутьКДанным	= "Список.гф_Поставка.Номер";

	НовыйЭлемент				= ЭтотОбъект.Элементы.Вставить("гф_Клиент", ТипПолеФормы,
								ЭтотОбъект.Элементы.Список, ЭтотОбъект.Элементы.Вид);
	НовыйЭлемент.Вид			= ВидПоляФормы.ПолеНадписи;
	НовыйЭлемент.ПутьКДанным	= "Список.гф_Заказ.Партнер";
	
КонецПроцедуры	
// } #wortmann

