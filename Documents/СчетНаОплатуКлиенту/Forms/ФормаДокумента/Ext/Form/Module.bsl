	НовоеПоле.ТолькоПросмотр = Истина; // Галфинд_ДомнышеваКР_29_03_2024
	
	// ++ Галфинд_ДомнышеваКР_29_03_2024
	НовоеПоле = Элементы.Добавить("гф_ТоварыВКоробахСкидкаНаценка", Тип("ПолеФормы"), НовоеПолеТаблица);
	НовоеПоле.Заголовок			= "Скидка/Наценка";
	НовоеПоле.Вид				= ВидПоляФормы.ПолеВвода;
	НовоеПоле.ПутьКДанным		= "Объект.гф_ТоварыВКоробах.СкидкаНаценка";
