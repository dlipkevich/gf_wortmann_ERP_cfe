	НовыйЭлемент.Заголовок = "Заполнить все"; 
	НовыйЭлемент.ИмяКоманды = "гф_КомандаЗаполнитьСкидкаНакидка";
	НовыйЭлемент.Вид = ВидКнопкиФормы.КнопкаКоманднойПанели;
    // -- Галфинд_ДомнышеваКР_29_03_2024

КонецПроцедуры 

&НаКлиенте
Процедура гф_ПриИзмененииЦеныСкидкаНаценка(Элемент) 
	// ++ Галфинд_ДомнышеваКР_29_03_2024
	ТекущиеДанные = Элементы.гф_ТаблицаТоварыВКоробах.ТекущиеДанные;
	СтавкаНДС = гф_ПолучитьЗначениеСтавки(ТекущиеДанные.СтавкаНДС);
	СкидкаНаценка = ТекущиеДанные.СкидкаНаценка;
		ТекущиеДанные.СуммаНДС = (СтавкаНДС / 100) 
		* (ТекущиеДанные.Цена - ТекущиеДанные.Цена * (СкидкаНаценка / 100) ) * ТекущиеДанные.Количество;
	ТекущиеДанные.Сумма = ТекущиеДанные.СуммаНДС 
		+ (ТекущиеДанные.Цена - ТекущиеДанные.Цена * (СкидкаНаценка / 100)) * ТекущиеДанные.Количество; 
	// -- Галфинд_ДомнышеваКР_29_03_2024
КонецПроцедуры

&НаКлиенте
Процедура гф_КомандаЗаполнитьСкидкаНакидка(Команда)
	// ++ Галфинд_ДомнышеваКР_29_03_2024
	ТекущиеДанные = Элементы.гф_ТаблицаТоварыВКоробах.ТекущиеДанные;
	СкидкаНаценка = ТекущиеДанные.СкидкаНаценка;
	Для каждого Стр Из Объект.гф_ТоварыВКоробах Цикл
		Стр.СкидкаНаценка = СкидкаНаценка;
	КонецЦикла;
	гф_ПреобразоватьТоварыВКоробах();
    // -- Галфинд_ДомнышеваКР_29_03_2024
КонецПроцедуры 

