	Запрос.УстановитьПараметр("Номенклатура", Объект.Номенклатура);
	
	ПакетРезультатов = Запрос.ВыполнитьПакет();
	РС_Время 		= ПакетРезультатов[0].Выгрузить();
	РС_Агрегации 	= ПакетРезультатов[1].Выгрузить();
	
