Процедура ОбработатьМассивИзмененийЗаказов(МассивВхДаных, ТЗ, тзКМ, ОтражатьДвиженияКМ = Ложь)
	
	ТЗ = СоздатьТзДляВходящихДанных(); //создаем тз для данных по продажах товаров
	тзКМ = СоздатьТзДляДвиженийКМ();   //создаем тз для движений КМ 
	
	
	Для Каждого строкаМассива из МассивВхДаных Цикл
		
		//Заказы от маркетплейсов не учитываются
		Если строкаМассива["isMarketplaceOrder"] = Истина Тогда
			Продолжить;
		КонецЕсли;
		
		НомерЗаказа = строкаМассива["id"];
		ДатаЗаказа = НачалоДня(ПреобразоватьКДатеВремени(строкаМассива["date"]));
		Для Каждого СтрокаЗаказа Из строкаМассива["items"] Цикл
			//Товары заказа
			Если СтрокаЗаказа["skuType"] = "SKU" Тогда
				
				ДанныеОСтатусеПозиции = СтрокаЗаказа["itemAmountState"];
				
				НовСтр = ТЗ.Добавить();
				НовСтр.НомерЗаказа = НомерЗаказа;
				НовСтр.ДатаЗаказа = ДатаЗаказа;
				НовСтр.Артикул					= СтрокаЗаказа["article"];
				НовСтр.Штрихкод		 			= СтрокаЗаказа["barcode"];
				НовСтр.ЦенаПродажи				= СтрокаЗаказа["price"];
				НовСтр.Количество 				= СтрокаЗаказа["quantity"];
				НовСтр.НомерСтрокиВЗаказе   	= СтрокаЗаказа["num"];
				НовСтр.АртикулРазмер 			= СтрокаЗаказа["variantExtId"];
				НовСтр.КоличествоВыдано			= ДанныеОСтатусеПозиции["amountDELIVERED"];
				НовСтр.КоличествоВозвращено		= ДанныеОСтатусеПозиции["amountRETURNED"] + ДанныеОСтатусеПозиции["amountRETURNED_AS_CLAIMS"] + ДанныеОСтатусеПозиции["amountRETURNED_DEFECTIVE"];
				НовСтр.КоличествоДоставлено		= ДанныеОСтатусеПозиции["amountSHIPPED"];
				//Услуга доставки. если цена > 0, то включаем строки в таблицу	
			ИначеЕсли СтрокаЗаказа["skuType"] = "SERVICE" Тогда
				
				Если СтрокаЗаказа["price"] <> 0 Тогда
					ЕстьДоставка = Истина;                          			
					НовСтр = ТЗ.Добавить();
					НовСтр.НомерЗаказа        = НомерЗаказа;
					НовСтр.ДатаЗаказа         = ДатаЗаказа;
					НовСтр.Количество 	      = СтрокаЗаказа["quantity"];
					НовСтр.ЦенаПродажи	      = СтрокаЗаказа["price"];
					НовСтр.НомерСтрокиВЗаказе = СтрокаЗаказа["num"];
					НовСтр.ЕстьДоставка       = ЕстьДоставка;
				КонецЕсли;  
				
			Иначе	
				
				Продолжить;	
				
			КонецЕсли;
			
			//Заполняем дату доставки
			Если строкаМассива["delivery"] <> Неопределено Тогда
				ИнформацияДоставка = строкаМассива["delivery"];
				ДатаДоставки = ПреобразоватьКДатеВремени(ИнформацияДоставка["actualDeliveryDate"]);
				Если ЗначениеЗаполнено(ДатаДоставки) Тогда
					НовСтр.ДатаПродажи = ДатаДоставки;
				КонецЕсли;
			КонецЕсли;
			
			//Обрабатываем Возвраты
			Если строкаМассива["returns"] <> Неопределено Тогда
				мВозвратыЗаказа = строкаМассива["returns"];
				Для каждого элВозврата из мВозвратыЗаказа Цикл
					ДатаВозврата = ПреобразоватьКДатеВремени(элВозврата["date"]);
					мСтрокВозвраты = элВозврата["items"];
					Для каждого СтрокаВозврата из мСтрокВозвраты Цикл
						Если СтрокаВозврата["skuType"] = "SKU" Тогда
							НомерСтрокиВЗаказе = СтрокаВозврата["num"];
							Штрихкод = СтрокаВозврата["barcode"];
							Если НовСтр.Штрихкод = Штрихкод И НовСтр.НомерСтрокиВЗаказе = НомерСтрокиВЗаказе Тогда
								НовСтр.ДатаВозврата = ДатаВозврата;
							КонецЕсли;
						КонецЕсли;						
					КонецЦикла;
				КонецЦикла
			КонецЕсли;
			
			//Проверка, что необходимо отражать движения КМ
			Если Не ОтражатьДвиженияКМ Тогда
				Продолжить;
			КонецЕсли;
			
			// Отражение движений Кодов Маркировки
			//0. Если Это услуга доставки дальнейшие операции не требуются
			Если СтрокаЗаказа["skuType"] = "SERVICE" Тогда
				Продолжить;
			КонецЕсли;
			
			СтруктураСтрокиКМ = Новый Структура;
			СтруктураСтрокиКМ.Вставить("НомерЗаказа", НовСтр.НомерЗаказа);
			СтруктураСтрокиКМ.Вставить("ДатаЗаказа", НовСтр.ДатаЗаказа);
			СтруктураСтрокиКМ.Вставить("Штрихкод", НовСтр.ШтрихКод);
			СтруктураСтрокиКМ.Вставить("Цена", НовСтр.ЦенаПродажи);
			СтруктураСтрокиКМ.Вставить("КодМаркировкиСтрока", "");
			СтруктураСтрокиКМ.Вставить("КодМаркировки", "");
			СтруктураСтрокиКМ.Вставить("КМBASE64","");
			
			//1. Если ДатаПродажи = ДатаВозврата дальнейшие операции не требуются.
			Если НачалоДня(НовСтр.ДатаПродажи) = НачалоДня(НовСтр.ДатаВозврата) Тогда 
				Продолжить;
			КонецЕсли;
			
			//2. Если не заполнена ДатаПродажи и заполнена ДатаВозврата то дальнейшие операции не требуются.
			Если Не ЗначениеЗаполнено(НовСтр.ДатаПродажи) и ЗначениеЗаполнено(НовСтр.ДатаВозврата) Тогда
				Продолжить;
			КонецЕсли;
			
			//3. Если Заполнена дата продажи и КоличествоВыдано > 0 и КоличествоВозвращено = 0
			//Обрабатываем packings
			Если ЗначениеЗаполнено(НовСтр.ДатаПродажи) И НовСтр.КоличествоВыдано > 0 И НовСтр.КоличествоВозвращено = 0 Тогда
				СтруктураСтрокиКМ.Вставить("Операция", Перечисления.ВидыОперацийИСМП.ВыводИзОборотаПродажаПоОбразцамДистанционнаяПродажа);
				СтруктураСтрокиКМ.Вставить("ДатаОперации", НовСтр.ДатаПродажи);
				КолВыдано = НовСтр.КоличествоВыдано;
				Если строкаМассива["packings"]<>Неопределено Тогда
					мДанныеОтправления = строкаМассива["packings"];
					Для каждого элДанныеОтправления из мДанныеОтправления Цикл
						мСодержимое = элДанныеОтправления["items"];
						Для каждого элМассива из мСодержимое Цикл
							Если элМассива["num"] = НовСтр.НомерСтрокиВЗаказе И элМассива["barcode"] = НовСтр.Штрихкод Тогда
								мУчетныеДанные = элМассива["accountingAttributes"];
								Найдено = 0;
								Для Каждого элУчетныеДанные из мУчетныеДанные Цикл
									
									Если Найдено >= КолВыдано Тогда Прервать КонецЕсли;
									
									Если элУчетныеДанные["code"] = "chestnyznak" Тогда
										СтруктураСтрокиКМ.КодМаркировкиСтрока = элУчетныеДанные["stringValue"];
										СтруктураСтрокиКМ.КодМаркировки = ПреобразоватьКМвФормат1С(СтруктураСтрокиКМ.КодМаркировкиСтрока);
										СтруктураСтрокиКМ.КМBASE64 = ШтрихкодированиеИСКлиентСервер.ШтрихкодВBase64(СтруктураСтрокиКМ.КодМаркировки);
										НовСтрКМ = тзКМ.Добавить();
										ЗаполнитьЗначенияСвойств(НовСтрКМ, СтруктураСтрокиКМ);
										Найдено = Найдено + 1;
									КонецЕсли;
									
								КонецЦикла;
							КонецЕсли;
						КонецЦикла;
					КонецЦикла;
				КонецЕсли;	
			КонецЕсли;
			
