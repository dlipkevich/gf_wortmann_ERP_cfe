		ТекстСообщения = "штрихкод: "+НенайденнаяНоменклатура.Штрихкод+", артикул: "+НенайденнаяНоменклатура.Артикул+", артикул и размер:"+НенайденнаяНоменклатура.АртикулРазмер;
