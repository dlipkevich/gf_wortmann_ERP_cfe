			ИзменитьЗаказВКоробахНовоеНазначение(ИзменитьЗаказ, Назначение);
		КонецЦикла;
		// здесь вносим изменения в "исходный" Заказ
		ИзменитьИсходныйЗаказВКоробах(ИзменитьЗаказ);
	КонецЕсли;
		
