				НоменклатураОбъект[Реквизит.ИмяДляПоиска] = Булево(ТекущееЗначение); 
				
			Иначе
				// Какая-то ошибка или пустое поле
			КонецЕсли;
		КонецЕсли;
	КонецЦикла;
	
	НоменклатураОбъект.ВариантОформленияПродажи = Перечисления.ВариантыОформленияПродажи.РеализацияТоваровУслуг;
