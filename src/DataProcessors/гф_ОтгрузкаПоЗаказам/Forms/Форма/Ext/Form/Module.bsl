								Строка_Н.Строки.Удалить(НайденныйОбъект[0]);
								
								Прервать;
								
							КонецЕсли;
							
						КонецЦикла;
					КонецЕсли;
				
				КонецЦикла;
				
			КонецЦикла;
		КонецЦикла;
		
	КонецЕсли;
	
