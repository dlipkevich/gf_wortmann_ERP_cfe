		Иначе
			КомпоновкаДанныхКлиентСервер.УдалитьОтбор(Настройки.Отбор, "Сезон");
		КонецЕсли;
	КонецЕсли;
	
	КомпоновщикНастроек.ЗагрузитьНастройки(Настройки);
