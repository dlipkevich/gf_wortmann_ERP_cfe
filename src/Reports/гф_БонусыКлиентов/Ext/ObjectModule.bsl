		КонецЕсли;
	КонецЕсли;
	
	парамДоговор = Настройки.ПараметрыДанных.НайтиЗначениеПараметра(Новый ПараметрКомпоновкиДанных("парамДоговор"));
	Если парамДоговор <> Неопределено Тогда
		Если парамДоговор.Использование Тогда
			КомпоновкаДанныхКлиентСервер.ДобавитьОтбор(Настройки, "Договор", парамДоговор.Значение, ВидСравненияКомпоновкиДанных.ВСписке);
		Иначе
			КомпоновкаДанныхКлиентСервер.УдалитьОтбор(Настройки.Отбор, "Договор");
		КонецЕсли;
	КонецЕсли;
	
	парамСезон = Настройки.ПараметрыДанных.НайтиЗначениеПараметра(Новый ПараметрКомпоновкиДанных("парамСезон"));
	Если парамСезон <> Неопределено Тогда
